# To see most used top 10 commands:
history | awk '{CMD[$2]++;count++;}END { for (a in CMD)print CMD[a] " " CMD[a]/count*100 "% " a;}' | grep -v "./" | column -c3 -s " " -t | sort -nr | nl | head -n10

# substitute multiple occurrences of string in last command:
!:gs/replace-this/with-this/

# replace first occurence of string in last command
^replace-this^with-this

# most recent command that starts with 'mv'
!mv

# the command before last
!-2

